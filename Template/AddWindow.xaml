<Window x:Class="Template.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template"
        mc:Ignorable="d"
        Title="Добавление автомобиля" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Введите марку</Label>
            <TextBox x:Name="addBrandTextBox"></TextBox>
            <Label>Введите модель</Label>
            <TextBox x:Name="addModelTextBox"></TextBox>

            <Label>Выберите картинку</Label>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="addImageTextBox" MinWidth="400" Margin="0,0,4,0"></TextBox>
                <Button x:Name="addImageButton" Width="50" Content="..."></Button>
            </StackPanel>
            <Button x:Name="addButton" Width="100" 
                    HorizontalAlignment="Left"
                    Margin="0,10" Click="addButton_Click">Добавить</Button>
        </StackPanel>
     
    </Grid>
</Window>
